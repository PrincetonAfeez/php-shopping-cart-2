{% extends 'templates/app.twig' %}

{% block content %}

  <div class="row">
    <div class="col-md-4">
      <img src="{{ product.image }}" alt="{{ product.title }} image" class = 'thumbnail img-responsive'>
    </div>
    <div class="col-md-8">

      {% if product.hasLowStock() %}
        <div class="alert alert-warning" role="alert">
        Low Stock
        </div>
      {% endif %}

      {% if product.outOfStock() %}
        <div class="alert alert-danger" role="alert">
        Out of Stock
        </div>
      {% endif %}

      <h3>{{ product.title }}</h3>
      <p>{{ product.description }}</p>

      {% if product.inStock() %}
      <button class="btn btn-default"><a href="{{ path_for('cart.add', { slug: product.slug, quantity: 1 }) }}"> Add to cart </a></button>
      {% endif %}
    </div>
  </div>

{% endblock %}
